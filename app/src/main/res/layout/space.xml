<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <include layout="@layout/activity_toolbar"
        android:id="@+id/include_toolbar">
    </include>

    <LinearLayout
        android:id="@+id/linear"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        >
        <TextView
            android:id="@+id/space_name"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="장소이름"
            android:textStyle="bold"
            android:textSize="23dp"
            android:textColor="@color/textColorPrimary"
            android:layout_marginStart="20dp"
            android:layout_marginTop="10dp"/>

            <ImageView
                android:id="@+id/space_img"
                android:src="@drawable/paris"
                android:visibility="visible"
                android:layout_width="400dp"
                android:layout_height="250dp"
                android:layout_gravity="center"
                android:layout_margin="10dp"
                />


       </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="50dp"
        >
        <ImageView
            android:id="@+id/heart_image_bt"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:src="@drawable/ic_iconfinder_heart"
            />
        <ImageView
            android:id="@+id/add_list_image_bt"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:src="@drawable/ic_icon_add_list"
            />
        <ImageView
            android:id="@+id/info_image_bt"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:src="@drawable/ic_icon_file"
            app:layout_constraintRight_toLeftOf="@id/share_image_bt"/>
        <ImageView
            android:id="@+id/review_image_bt"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:src="@drawable/ic_icon_review"
            app:layout_constraintRight_toLeftOf="@id/share_image_bt"/>
        <ImageView
            android:id="@+id/share_image_bt"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:src="@drawable/ic_icon_share"
            app:layout_constraintLeft_toRightOf="@id/review_image_bt"
           />
    </LinearLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="350dp">
        <TextView
            android:id="@+id/space_explain"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="장소 설명 리스트"/>
    </LinearLayout>


</LinearLayout>